{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build libretro-supermodel (Debug)",
      "type": "shell",
      "command": "make",
      "args": [
        "DEBUG=1",
        "-j$(nproc)"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "make watch (entr)",
      "type": "shell",
      "command": "find . -name '*.cpp' -o -name '*.h' | entr -c make DEBUG=1 -j",
      "isBackground": true,
      "problemMatcher": []
    }
  ]
}